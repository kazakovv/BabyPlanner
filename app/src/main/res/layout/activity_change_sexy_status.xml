<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.victor.sexytalk.sexytalk.UserInterfaces.ActivityChangeSexyStatus"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_toolbar" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
        <!--android:src="@drawable/kiss_background" -->


    <EditText
        android:id="@+id/changeSexyStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/default_padding"
        android:hint="@string/change_sexy_status_hint"
        android:maxLength="@integer/max_status_length"
        />


</RelativeLayout>
