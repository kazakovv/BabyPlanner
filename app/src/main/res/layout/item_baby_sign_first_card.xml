<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:style="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title_baby_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Zodiac_Sign_Title"

            android:text="@string/title_baby_star_counter" />

        <TextView
            android:id="@+id/datesToConceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="first date"
            style="@style/Zodiac_Sign_Text"/>

        <TextView
            android:id="@+id/datesToGiveBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="second date"
            style="@style/Zodiac_Sign_Text"/>

        <TextView
            android:id="@+id/zodiacSignOfBaby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="third date"
            style="@style/Zodiac_Sign_Text"/>

        <!-- images for zodiac signs -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_sign_first_card"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding"
                android:id="@+id/image_sign_first_card_alternative"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
