<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="LoginButton">
        <item name="android:textSize">@dimen/default_button_text_size</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:background">@drawable/button_login</item>

    </style>

    <!-- style za zaglaviata n dialog box-->
    <style name="DialogWindowTitle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">@color/apptheme_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/alert_dialog_title_text_size</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_dialog_box_title</item>
    </style>

    <style name="CustomAlertDialogText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <!--  <item name="android:textSize">@dimen/alert_dialog_message_text_size</item> -->
        <item name="android:textColor">@color/color_black</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
    </style>

    <!-- style za sexy status -->
    <style name="SexyStatus">

        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:textColor">@color/second_accent_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DefaultButton">
        <item name="android:textSize">@dimen/default_button_text_size</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:background">@drawable/button_custom</item>
    </style>

    <style name="DefaultButton.SmallText">
        <item name="android:textSize">@dimen/default_button_small_text_size</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_marginBottom">@dimen/default_padding</item>
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginRight">@dimen/default_padding</item>
        <item name="android:textAlignment">center</item>
    </style>
    
    <style name="Zodiac_Sign_Title">
        <item name="android:textColor">@color/tab_accent_color</item>
        <item name="android:textSize">@dimen/title_zodiac_sign</item>
        <item name="android:layout_marginBottom">@dimen/default_padding</item>
    </style>

    <style name="Zodiac_Sign_Button">
        <item name="android:textSize">@dimen/default_button_text_size</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:background">@drawable/button_zodiac_sign</item>

    </style>

    <style name="Zodiac_Sign_Text">
        <item name="android:textSize">@dimen/text_zodiac_sign</item>
        <item name="android:layout_marginBottom">@dimen/default_padding</item>
    </style>

</resources>

